<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hexun.gateway.mapper.AggregatorMapper">
	
  	<resultMap id="BaseResultMap" type="com.hexun.gateway.model.Aggregator">
		<id column="id" property="id" />	
	    <result column="name" property="name" />
	    <result column="uri" property="uri" />
	    <result column="type" property="type" />
	    <result column="description" property="description" />
	    <result column="is_delete" property="isDelete" />
	    <result column="create_user_id" property="createUserId" />
	    <result column="create_time" property="createTime" />
	    <result column="update_user_id" property="updateUserId" />
	    <result column="update_time" property="updateTime" />
  	</resultMap>
  	
  	<!-- 表所有字段 -->
  	<sql id="Base_Column_List">
  		id, name, uri, type, description, is_delete, create_user_id, create_time, update_user_id, update_time
  	</sql>
  	
  	<!-- 根据主键查询 -->
  	<select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    	select 
    	<include refid="Base_Column_List" />
    	from gateway_aggregator
		where id = #{id}
  	</select>
  	
  	<!-- 新增数据库记录 -->
  	<insert id="insert" parameterType="com.hexun.gateway.model.Aggregator">
    	<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
	    insert into gateway_aggregator
    		<trim prefix="(" suffix=")" suffixOverrides=",">
		      	<if test="id != null">
		        	id,
		      	</if>
		      	<if test="name != null">
		        	name,
		      	</if>
		      	<if test="uri != null">
		        	uri,
		      	</if>
		      	<if test="type != null">
		        	type,
		      	</if>
		      	<if test="description != null">
		        	description,
		      	</if>
		      	<if test="isDelete != null">
		        	is_delete,
		      	</if>
		      	<if test="createUserId != null">
		        	create_user_id,
		      	</if>
		      	<if test="createTime != null">
		        	create_time,
		      	</if>
		      	<if test="updateUserId != null">
		        	update_user_id,
		      	</if>
		      	<if test="updateTime != null">
		        	update_time,
		      	</if>
    		</trim>
    	values
    		<trim prefix="(" suffix=")" suffixOverrides=",">
      			<if test="id != null">
        			#{id},
      			</if>
      			<if test="name != null">
        			#{name},
      			</if>
      			<if test="uri != null">
        			#{uri},
      			</if>
      			<if test="type != null">
        			#{type},
      			</if>
      			<if test="description != null">
        			#{description},
      			</if>
      			<if test="isDelete != null">
        			#{isDelete},
      			</if>
      			<if test="createUserId != null">
        			#{createUserId},
      			</if>
      			<if test="createTime != null">
        			#{createTime},
      			</if>
      			<if test="updateUserId != null">
        			#{updateUserId},
      			</if>
      			<if test="updateTime != null">
        			#{updateTime},
      			</if>
    		</trim>
  	</insert>
  	
  	<!-- 更新数据库记录 -->
  	<update id="update" parameterType="com.hexun.gateway.model.Aggregator">
    	update gateway_aggregator
    	<set>
			<if test="name != null">
    			name = #{name},
  			</if>
			<if test="uri != null">
    			uri = #{uri},
  			</if>
			<if test="type != null">
    			type = #{type},
  			</if>
			<if test="description != null">
    			description = #{description},
  			</if>
			<if test="isDelete != null">
    			is_delete = #{isDelete},
  			</if>
			<if test="updateUserId != null">
    			update_user_id = #{updateUserId},
  			</if>
    	</set>
    	<where>
    		id = #{id}
    	</where>
  	</update>
  	
	<!-- 根据map查询 -->
  	<select id="getAggregator" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from gateway_aggregator
        <where>
  			<if test="id != null">
    			and id = #{id}
  			</if>
  			<if test="name != null">
    			and name = #{name}
  			</if>
  			<if test="uri != null">
    			and uri = #{uri}
  			</if>
  			<if test="type != null">
    			and type = #{type}
  			</if>
  			<if test="description != null">
    			and description = #{description}
  			</if>
  			<if test="isDelete != null">
    			and is_delete = #{isDelete}
  			</if>
  			<if test="createUserId != null">
    			and create_user_id = #{createUserId}
  			</if>
  			<if test="createTime != null">
    			and create_time = #{createTime}
  			</if>
  			<if test="updateUserId != null">
    			and update_user_id = #{updateUserId}
  			</if>
  			<if test="updateTime != null">
    			and update_time = #{updateTime}
  			</if>
        </where>
  	</select>
  
  	<!-- 根据map查询 -->
  	<select id="listAggregator" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from gateway_aggregator
        <where>
  			<if test="name != null">
    			and name = #{name}
  			</if>
  			<if test="uri != null">
    			and uri = #{uri}
  			</if>
  			<if test="type != null">
    			and type = #{type}
  			</if>
  			<if test="description != null">
    			and description = #{description}
  			</if>
  			<if test="isDelete != null">
    			and is_delete = #{isDelete}
  			</if>
  			<if test="createUserId != null">
    			and create_user_id = #{createUserId}
  			</if>
  			<if test="createTime != null">
    			and create_time = #{createTime}
  			</if>
  			<if test="updateUserId != null">
    			and update_user_id = #{updateUserId}
  			</if>
  			<if test="updateTime != null">
    			and update_time = #{updateTime}
  			</if>
        </where>
        <if test="groupBy != null">
        	group by ${groupBy}
        </if>
        <if test="orderBy != null">
        	order by ${orderBy}
        </if>
  	</select>
  	
  	<!-- 批量保存 -->
	<insert id="batchInsert" parameterType="java.util.List">
		insert into gateway_aggregator (<include refid="Base_Column_List" />)
		values 
		<foreach collection="list" index="index" item="item" separator=",">
			<trim prefix="(" suffix=")" suffixOverrides=",">
				#{item.id},
				#{item.name},
				#{item.uri},
				#{item.type},
				#{item.description},
				#{item.isDelete},
				#{item.createUserId},
				#{item.createTime},
				#{item.updateUserId},
				#{item.updateTime},
			</trim>
		</foreach>
	</insert>
	
	<!-- 批量更新 -->
  	<update id="batchUpdate" parameterType="java.util.List">
		<foreach collection="list" index="index" item="item" separator=";">
			update gateway_aggregator
			<set>
        		<if test="item.name != null">
        			name = #{item.name},
        		</if>
        		<if test="item.uri != null">
        			uri = #{item.uri},
        		</if>
        		<if test="item.type != null">
        			type = #{item.type},
        		</if>
        		<if test="item.description != null">
        			description = #{item.description},
        		</if>
        		<if test="item.isDelete != null">
        			is_delete = #{item.isDelete},
        		</if>
        		<if test="item.updateUserId != null">
        			update_user_id = #{item.updateUserId},
        		</if>
			</set>
            where id = #{item.id}
		</foreach>
	</update>
	
</mapper>